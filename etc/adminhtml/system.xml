<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="mpimageoptimizer" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Image Optimizer</label>
            <tab>mageplaza</tab>
            <resource>Mageplaza_ImageOptimizer::configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Select Yes to enable this module</comment>
                </field>
                <field id="backup_image" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Image Backup</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Backup in var/backup_image directory</comment>
                </field>
            </group>
            <group id="optimize_options" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Optimize Options</label>
                <field id="image_quality" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Image Quality</label>
                    <source_model>Mageplaza\ImageOptimizer\Model\Config\Source\Quality</source_model>
                    <comment><![CDATA[
                <p>Specify optimization level for compression.</p>
                <p>Lossless is a filter that compresses the data. This doesn’t reduce the quality but it will require the images to be uncompressed before they can be rendered.</p>
                <p>Custom (Lossy) is a filter that eliminates some of the data. This will degrade the image, so you’ll have to be careful of how much to reduce the image.</p>
                ]]></comment>
                </field>
                <field id="quality_percent" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Quality Percent</label>
                    <validate>validate-digits validate-greater-than-zero</validate>
                    <comment><![CDATA[
                <p>%. between 1 and 100. Default value is 92.</p>
                <p>For having a good image quality, please remain above 90.</p>
                <p>This option supports only JPG images.</p>
                ]]></comment>
                    <depends>
                        <field id="image_quality">custom</field>
                    </depends>
                </field>
                <field id="skip_transparent_img" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Skip Transparent Images</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="force_permission" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Force File Permission</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If Yes, you can assign access rights to the optimized image paths. For example: read a file, write a file.</comment>
                </field>
                <field id="select_permission" translate="label comment" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Select Permission</label>
                    <comment>Enter the number representing certain permission. Refer the list here.</comment>
                    <validate>validate-digits validate-greater-than-zero</validate>
                    <depends>
                        <field id="force_permission">1</field>
                    </depends>
                </field>
            </group>
            <group id="image_directory" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Directory</label>
                <field id="include_directories" translate="label" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Included Directories</label>
                    <frontend_model>Mageplaza\ImageOptimizer\Block\Adminhtml\Config\Field\Directories</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                    <comment>If empty, default directory is pub/media/</comment>
                </field>
                <field id="exclude_directories" translate="label" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Excluded Directories</label>
                    <frontend_model>Mageplaza\ImageOptimizer\Block\Adminhtml\Config\Field\Directories</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>
            </group>
            <group id="cron_job" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Cron Job</label>
                <field id="enabled_scan" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Image Scan</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="scan_schedule" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Scan Schedule</label>
                    <depends>
                        <field id="enabled_scan">1</field>
                    </depends>
                </field>
                <field id="enabled_optimize" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Image Optimization</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="optimize_schedule" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Optimization Schedule</label>
                    <depends>
                        <field id="enabled_optimize">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>